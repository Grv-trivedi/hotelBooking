<p id="notice"><%= notice %></p>
<div class="container" >
            <p class="h1"  style="color:white;text-align:center;font-size: 275%;;
        font-family: serif">Hotels
</div>

<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Address</th>
      <th scope="col">Phone number</th>
      <th scope="col">Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hotels.each do |hotel| %>
      <tr>
        <td><%= hotel.name %></td>
        <td><%= hotel.address %></td>
        <td><%= hotel.phone_number %></td>
        <td><%= hotel.capacity %></td>
        <td><%= link_to 'Show', hotel,:class => "btn btn-default btn-success" %></td>
        <td><%= link_to 'Edit', edit_hotel_path(hotel),:class => "btn btn-default btn-success" %></td>
        <td><%= link_to 'Destroy', hotel, method: :delete, data: { confirm: 'Are you sure?' },:class => "btn btn-default btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hotel', new_hotel_path,:class => "btn btn-default btn-success btn-lg" %>
